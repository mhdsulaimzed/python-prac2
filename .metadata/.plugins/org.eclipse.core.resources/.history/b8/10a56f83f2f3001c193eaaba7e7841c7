#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int limit;
	printf("enter a number of row you want to print");
	scanf("%d",&limit);
	for(int i=1;i<=limit;i++)
	{
		for(int j=0;j<i;j++)
		{
			printf("+");

		}
		printf("\n");
	}
	return EXIT_SUCCESS;
}
